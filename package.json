{
  "name": "ai-elements-vue",
  "version": "0.12.0",
  "private": true,
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "dev:www": "pnpm --filter www dev",
    "build:www": "pnpm --filter www build",
    "preview:www": "pnpm --filter www preview",
    "dev:registry": "pnpm --filter registry dev",
    "build:registry": "pnpm --filter registry build",
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint . && turbo run lint",
    "lint:fix": "eslint . --fix",
    "bumpp": "bumpp package.json packages/*/package.json apps/*/package.json"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "glob": "7.2.3",
      "inflight": "1.0.6",
      "source-map-resolve": "0.6.0",
      "@oxc-parser/wasm": "0.60.0",
      "@types/parse-path": "7.1.0",
      "node-domexception": "1.0.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "zod": "4"
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
